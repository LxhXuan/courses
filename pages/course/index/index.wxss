/**index.wxss**/
.search{
  height: 60rpx;
  padding: 10rpx;
  background: #f2f2f2;
}
.input{
  background: #fff;
  border-radius: 4rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
}
.placeholder{
  text-align: center;
}
.scroll{
  background: #f2f2f2;
  flex: 1;
}
.block{
  padding: 20rpx;
  margin-bottom: 40rpx;
  background: #fff;
}
.title{
  border-bottom: 1px solid #ccc;
  font-size: 24rpx;
  color: #999;
  padding-bottom: 20rpx;
}
.course_item{
  padding: 40rpx 0;
  border-bottom: 1px solid #ccc;
}
.course_title{
  color: #333;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.course_summary{
  color: #999;
  font-size: 24rpx;
}
.more{
  font-size: 24rpx;
  padding-top: 20rpx;
  color: cornflowerblue;
}